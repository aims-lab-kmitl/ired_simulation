<?xml version="1.0"?>
<robot name="ired_robot" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find ired_simulation)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find your_package_name)/urdf/ired_robot.gazebo.xacro" />

  <!-- link -->
  <link name="base_footprint"/>
  <link name="imu_link"/>

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.05 -0.0585" rpy="1.57 0.0 3.14"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/Body.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.05 -0.0585" rpy="1.57 0.0 3.14"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/Body.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </collision>
  </link>

  <link name="base_scan">
    <visual>
      <origin xyz="0.09 -0.75 -0.143" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/LiDAR.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0.09 -0.75 -0.143" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/LiDAR.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </collision>
  </link>
  <link name="wheel_left_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </collision>
  </link>
  <link name="wheel_right_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://ired_simulation/meshes/Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </collision>
  </link>

  <!-- joint -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.0975" rpy="0.0 0.0 0.0"/>
  </joint>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.0 0.0 0.0963195" rpy="0.0 0.0 0.0"/>
  </joint>
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.097 -0.068" rpy="0.0 0.0 1.57"/>
  </joint>
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 -0.097 -0.068" rpy="0.0 0.0 -1.57"/>
  </joint>

</robot>